{
    //it is the root of the project
    "root": true,
    //ignore other projects under the main project
    "ignorePatterns": [
        "projects/**/*"
    ],
    "overrides": [
        //typescript rules
        {
            "files": [
                "*.ts"
            ],
            // extends the recommended rules, typescript rules, angular rules, and prettier rules
            "extends": [
                "eslint:recommended",
                "@typescript-eslint/recommended",
                "@angular-eslint/recommended",
                "prettier"
            ],
            //custom rules
            "rules": {
                //directive selector example: <div appSomething></div>
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "app",
                        "style": "camelCase"
                    }
                ],
                //component selector example: <app-something></app-something>
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "app",
                        "style": "kebab-case"
                    }
                ],
                //no unused vars
                "@typescript-eslint/no-unused-vars": "error",
                //no explicit any
                "@typescript-eslint/no-explicit-any": "warn",
                //prefer const instead of let or var if possible
                "prefer-const": "error"
            }
        },
        //angular template rules
        {
            "files": [
                "*.html"
            ],
            //extends the recommended template rules
            "extends": [
                "@angular-eslint/template/recommended"
            ],
            "rules": {}
        }
    ]
}