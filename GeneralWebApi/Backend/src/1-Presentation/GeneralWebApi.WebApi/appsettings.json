{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Authentication": {
    "EnableJwt": true,
    "EnableApiKey": true,
    "EnableOAuth": false,
    "DefaultScheme": "Bearer",
    "Jwt": {
      "SecretKey": "",
      "Issuer": "your-company",
      "Audience": "your-app",
      "AccessTokenExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "ApiKey": {
      "HeaderName": "X-API-Key",
      "ValidApiKeys": {
        "Client1": "client1-key-xxx",
        "Client2": "client2-key-yyy"
      }
    }
  },
  "Database": {
    "ConnectionString": "Server=localhost,1433;Database=GeneralWebApi;User Id=sa;Password=admin123;TrustServerCertificate=True;",
    "Provider": "SqlServer",
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "RetryDelaySeconds": 5,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "PoolSize": 128
  },
  "DocumentCheck": {
    "PermittedExtensions": [
      ".pdf",
      ".jpg",
      ".jpeg",
      ".png"
    ],
    "MaxFileSize": 1073741824
  },
  "FileStorage": {
    "BasePath": "Files",
    "MaxFileSize": 1073741824,
    "AllowedExtensions": [
      ".pdf",
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".bmp",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".ppt",
      ".pptx",
      ".txt",
      ".zip",
      ".rar",
      ".7z"
    ]
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 1073741824,
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "KeepAliveTimeout": "00:10:00",
      "RequestHeadersTimeout": "00:05:00"
    }
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "GeneralWebApi",
    "Database": 0,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AbortConnect": false
  },
  "HttpClient": {
    "DefaultTimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "EnableLogging": true,
    "EnableRetry": true
  },
  "Scheduler": {
    "EnableScheduler": true,
    "MaxConcurrency": 10,
    "InstanceName": "GeneralWebApiScheduler",
    "Jobs": {
      "DatabaseCleanup": {
        "Enabled": true,
        "CronExpression": "0 0/1 * * * ?",
        "LogRetentionDays": 1,
        "TempDataRetentionHours": 24
      },
      "CacheMaintenance": {
        "Enabled": true,
        "CronExpression": "0 0 */6 * * ?",
        "MaxCacheSize": 1000
      },
      "FileSystemMaintenance": {
        "Enabled": true,
        "CronExpression": "0 0 3 * * ?",
        "TempFileRetentionHours": 48,
        "MaxDiskUsageGB": 10
      }
    }
  },
  "AllowedHosts": "*"
}