{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Authentication": {
    "EnableJwt": true,
    "EnableApiKey": true,
    "EnableOAuth": false,
    "DefaultScheme": "Bearer",
    "Jwt": {
      //to be set in the environment variable, not in the appsettings.json file
      // or use the VS studio debug mode to set the environment variable
      // or the secret key on servr (devops)
      "SecretKey": "",
      "Issuer": "your-company",
      "Audience": "your-app",
      "AccessTokenExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "ApiKey": {
      "HeaderName": "X-API-Key",
      "ValidApiKeys": {
        "Client1": "client1-key-xxx",
        "Client2": "client2-key-yyy"
      }
    }
  },
  "Database": {
    "ConnectionString": "Server=localhost,1433;Database=GeneralWebApi;User Id=sa;Password=admin123;TrustServerCertificate=True;",
    "Provider": "SqlServer",
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "RetryDelaySeconds": 5,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "PoolSize": 128
  },
  "DocumentCheck": {
    "PermittedExtensions": [
      ".txt",
      ".pdf",
      ".jpg",
      ".jpeg",
      ".png"
    ],
    "MaxFileSize": 2097152
  },
  "AllowedHosts": "*"
}